{
  "name": "springboot-http-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayoubtoueti/springboot-http-generator.git"
  },
  "displayName": "Spring Boot HTTP Client Generator",
  "description": "thiesan extension that generates HTTP client requests from Spring Boot controller methods — similar to IntelliJ’s \"Create HTTP Request\" feature",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "icon/icon.png",
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "spring",
    "spring boot",
    "http",
    "rest",
    "api",
    "testing",
    "codelens"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spring Boot HTTP Client",
      "properties": {
        "springboot-http-client.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable CodeLens for Spring Boot mapping annotations"
        },
        "springboot-http-client.useEnvironmentVariables": {
          "type": "boolean",
          "default": true,
          "description": "Use environment variables in generated .http files"
        },
        "springboot-http-client.defaultPort": {
          "type": "number",
          "default": 8080,
          "description": "Default port for HTTP requests when not detected from configuration"
        },
        "springboot-http-client.defaultHost": {
          "type": "string",
          "default": "localhost",
          "description": "Default host for HTTP requests"
        },
        "springboot-http-client.showResponseInNewTab": {
          "type": "boolean",
          "default": true,
          "description": "Show HTTP response in a new editor tab"
        },
        "springboot-http-client.requestTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds"
        }
      }
    },
    "commands": [
      {
        "command": "springboot.sendRequest",
        "title": "Send HTTP Request",
        "category": "Spring Boot"
      },
      {
        "command": "springboot.generateHttpRequest",
        "title": "Generate .http File",
        "category": "Spring Boot"
      },
      {
        "command": "springboot.copyAsCurl",
        "title": "Copy as cURL",
        "category": "Spring Boot"
      },
      {
        "command": "springboot.enableCodeLens",
        "title": "Enable CodeLens",
        "category": "Spring Boot"
      },
      {
        "command": "springboot.disableCodeLens",
        "title": "Disable CodeLens",
        "category": "Spring Boot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && resourceExtname == .java",
          "command": "springboot.generateHttpRequest",
          "group": "springboot"
        },
        {
          "when": "editorTextFocus && resourceExtname == .java",
          "command": "springboot.copyAsCurl",
          "group": "springboot"
        }
      ],
      "commandPalette": [
        {
          "command": "springboot.sendRequest",
          "when": "false"
        },
        {
          "command": "springboot.generateHttpRequest",
          "when": "false"
        },
        {
          "command": "springboot.copyAsCurl",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "java-parser": "^3.0.1"
  }
}